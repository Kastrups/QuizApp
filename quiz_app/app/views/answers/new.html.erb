<h1>Add Answer to <%= @question.content %></h1>

<%= form_with(model: [@question.quiz, @question, @answer], local: true) do |form| %>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </div>
  <div>
    <%= form.submit 'Create Answer', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Question', quiz_question_path(@question.quiz, @question), class: 'btn btn-secondary' %>
