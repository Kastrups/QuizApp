<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
  <h1 class="text-3xl leading-9 font-extrabold tracking-tight text-gray-900 sm:text-4xl sm:leading-10">
    All Quizzes
  </h1>
  
  <div class="mt-8">
    <%= link_to 'Create New Quiz', new_quiz_path, class: 'inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>

  <div class="mt-10">
    <ul class="space-y-8">
      <% @quizzes.each do |quiz| %>
        <li class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
              <%= link_to quiz.title, quiz_path(quiz), class: 'text-blue-500 hover:text-blue-700' %>
            </h3>
            <p class="mt-1 max-w-2xl text-sm leading-5 text-gray-500">
              <%= quiz.description %>
            </p>
          </div>
          <div class="px-4 py-4 sm:px-6 flex justify-end space-x-4">
            <%= link_to 'Edit', edit_quiz_path(quiz), class: 'text-yellow-500 hover:text-yellow-700' %>
            <%= link_to 'Delete', quiz_path(quiz), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
